# test truncating a double holds precision
[require]
GLSL >= 1.50
GL_ARB_gpu_shader_fp64
GL_ARB_vertex_attrib_64bit

[vertex shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require
#extension GL_ARB_vertex_attrib_64bit : require

uniform double tolerance;
uniform dvec2 expected;

in vec3 vertex;
in dvec2 value;
out vec4 color;

void main()
{
  gl_Position = vec4(vertex, 1.0);

  color = (distance(value, expected) <= tolerance) ? vec4(0.0, 1.0, 0.0, 1.0) : vec4(0.0, 0.0, 0.0, 1.0);
}

[fragment shader]
#version 150
#extension GL_ARB_gpu_shader_fp64 : require

in vec4 color;
void main()
{
  gl_FragColor = color;
}

[vertex data]
